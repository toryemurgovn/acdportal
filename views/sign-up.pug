extends layout

block content
  form.form-signin(action="/sign-up", method="POST")
    .text-center.mb-4
      h1.h3.mb-3.font-weight-normal Sign up
    .form-label-group
      input#inputUserName.form-control(name='email', type='email', placeholder='Email', required='', autofocus='')
      label(for='inputUserName') Email
    .form-label-group
      input#inputPassword.form-control(name='password', type='password', placeholder='Password', required='')
      label(for='inputPassword') Password
    .form-label-group
      input#inputConfirmPassword.form-control(name='confirmPassword', type='password', placeholder='Confirm Password', required='')
      label(for='inputConfirmPassword') Confirm Password
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up
    p.mt-3.text-center
      | Already registered? 
      a(href='/sign-in') Sign in