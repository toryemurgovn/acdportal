{
  "name": "acdportal",
  "version": "1.0.0",
  "description": "Bitcoin 101 Web Portal",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "build": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/assets/css/main.scss dist/assets/css/main.css",
    "watch-sass": "node-sass -w src/assets/css/main.scss dist/assets/css/main.css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toryemurgovn/acdportal.git"
  },
  "keywords": [
    "bitcoin",
    "emurgo",
    "emurgovn"
  ],
  "author": "EmurgoVN",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/toryemurgovn/acdportal/issues"
  },
  "homepage": "https://github.com/toryemurgovn/acdportal#readme",
  "dependencies": {
    "dotenv": "^5.0.1",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "lusca": "^1.6.0",
    "path": "^0.12.7",
    "pug": "^2.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jquery": "^3.3.2",
    "@types/node": "^10.1.3",
    "@types/shelljs": "^0.8.0",
    "gulp": "^3.9.1",
    "jest": "^23.0.1",
    "node-sass": "^4.9.0",
    "shelljs": "^0.8.2",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.5",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  }
}
