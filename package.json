{
  "name": "acdportal",
  "version": "1.0.0",
  "description": "Bitcoin 101 Web Portal",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "build": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/assets/css/main.scss dist/assets/css/main.css",
    "watch-sass": "node-sass -w src/assets/css/main.scss dist/assets/css/main.css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toryemurgovn/acdportal.git"
  },
  "keywords": [
    "bitcoin",
    "emurgo",
    "emurgovn"
  ],
  "author": "EmurgoVN",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/toryemurgovn/acdportal/issues"
  },
  "homepage": "https://github.com/toryemurgovn/acdportal#readme",
  "dependencies": {
    "@types/lodash": "^4.14.109",
    "@types/multer": "^1.3.6",
    "bcrypt-nodejs": "0.0.3",
    "bootstrap": "^4.1.1",
    "connect-mongo": "^2.0.1",
    "dotenv": "^5.0.1",
    "email-validator": "^2.0.4",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-flash": "0.0.2",
    "express-session": "^1.15.6",
    "express-validator": "^5.2.0",
    "jquery": "^3.3.1",
    "lusca": "^1.6.0",
    "moment": "^2.22.1",
    "mongoose": "^5.1.3",
    "multer": "^1.3.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "popper.js": "^1.14.3",
    "pug": "^2.0.3",
    "request-promise": "^4.2.2",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/csv-parse": "^1.1.11",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.11.1",
    "@types/express-flash": "0.0.0",
    "@types/express-session": "^1.15.9",
    "@types/jest": "^23.0.0",
    "@types/jquery": "^3.3.2",
    "@types/lusca": "^1.5.0",
    "@types/mongodb": "^3.0.18",
    "@types/mongoose": "^5.0.15",
    "@types/node": "^10.1.3",
    "@types/passport": "^0.4.5",
    "@types/passport-local": "^1.0.33",
    "@types/request": "^2.47.0",
    "@types/shelljs": "^0.8.0",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "csv-parse": "^2.4.1",
    "gulp": "^3.9.1",
    "jest": "^23.0.1",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.5",
    "shelljs": "^0.8.2",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.5",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
